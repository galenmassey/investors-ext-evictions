{
    "manifest_version": 3,
    "name": "Investors Evictions Extension",
    "version": "1.5.0",
    "description": "Enhanced eviction case training tool with smart detail navigation and superior entity detection",
    
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    
    "host_permissions": [
        "*://portal-nc.tylertech.cloud/*",
        "*://*.tylertech.cloud/*"
    ],
    
    "content_scripts": [
        {
            "matches": [
                "*://portal-nc.tylertech.cloud/*",
                "*://*.tylertech.cloud/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "Investors Evictions Extension"
    },
    
    "web_accessible_resources": [
        {
            "resources": ["styles.css"],
            "matches": ["*://portal-nc.tylertech.cloud/*"]
        }
    ]
}